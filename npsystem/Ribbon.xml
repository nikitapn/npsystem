                <ControlSizeDefinition ControlName="wtl_VIEW_STATUS_BAR" ImageSize="Small" IsLabelVisible="true" />
                <ControlSizeDefinition ControlName="wtl_VIEW_SYSTEM_TREE" ImageSize="Small" IsLabelVisible="true" />
                <ControlSizeDefinition ControlName="wtl_VIEW_OUTPUT" ImageSize="Small" IsLabelVisible="true" />
