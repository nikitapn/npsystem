{
	"compilerOptions": {
		"declaration": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"outDir": "dist",
		"noImplicitAny": true,
		"module": "esnext",
		"target": "es2020",
		"typeRoots": [ "./node_modules/@types", "./types" ],
		"stripInternal": true,
		"baseUrl": ".",
		"paths": {
      "@/*": ["src/*"]
    }
	},
	"include": [
			"src/**/*"
	],
	"exclude": ["node_modules", "typings"]
}